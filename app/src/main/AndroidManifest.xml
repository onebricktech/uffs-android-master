<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bitcoin.gneiss">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.splash.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activity.authentication.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.authentication.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.authentication.BarCodeSignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.Dashboard"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.RegisterPlayer"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.TeamDetail"
            android:screenOrientation="portrait" />
    </application>

</manifest>